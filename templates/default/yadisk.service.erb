#!/bin/bash
# Start and stop Yandex Disk


case "$1" in
    start)
        sudo yandex-disk start -c <%= @config %>
        echo started.
        exit 0
    ;;
    stop)
        sudo yandex-disk stop -c <%= @config %>
        echo stopped.
        exit 0
    ;;
    restart)
        $0 stop
        sleep 5
        $0 start
        exit 0
    ;;
*)

echo "Usage: $0 {start|stop|restart}"
exit 1
;;

esac
