#!/bin/bash
# Start and stop Sonar server

SONAR_DIRECTORY=<%= @dir %>

case "$1" in
    start)
        $SONAR_DIRECTORY/bin/linux-x86-64/sonar.sh start 2>&1
        echo started.
        exit 0
    ;;

    stop)
        $SONAR_DIRECTORY/bin/linux-x86-64/sonar.sh stop 2>&1
        pkill -9 -f sonar 2>&1
        echo stopped.
        exit 0
    ;;

    restart)
        $0 stop
        sleep 5
        $0 start
        exit 0
    ;;
*)

echo "Usage: $0 {start|stop|restart}"
exit 1
;;

esac


