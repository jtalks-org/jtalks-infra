#!/bin/bash
# Start and stop Confluence server

CONFLUENCE_DIRECTORY=<%= @dir %>
case "$1" in
    start)
        $CONFLUENCE_DIRECTORY/bin/start-confluence.sh
        echo started.
        exit 0
    ;;

    stop)
        $CONFLUENCE_DIRECTORY/bin/stop-confluence.sh
        echo stopped.
        exit 0
    ;;

    restart)
        $0 stop
        sleep 5
        $0 start
        exit 0
    ;;
*)

echo "Usage: $0 {start|stop|restart}"
exit 1
;;

esac


